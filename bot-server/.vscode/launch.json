  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Debug file",
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/lib/**/*.js"
      ]
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Debug test",
      "program": "${workspaceFolder}/src/test.ts",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/lib/**/*.js"
      ]
    }
  ]
}
